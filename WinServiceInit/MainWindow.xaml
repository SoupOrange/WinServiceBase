<Window x:Class="WinServiceInit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinServiceInit"
        mc:Ignorable="d"
        Title="演示操作" Height="150" Width="400">
    <Grid>
        <UniformGrid Columns="4">
            <Button Content="安装服务" Height="30" Width="80"  Name="InitBtn" Click="InitBtn_Click"/>
            <Button Content="开始服务" Height="30" Width="80" Name="StartBtn" Click="StartBtn_Click"/>
            <Button Content="停止服务" Height="30" Width="80" Name="StopBtn" Click="StopBtn_Click"/>
            <Button Content="卸载服务" Height="30" Width="80" Name="UnInitBtn" Click="UnInitBtn_Click"/>
        </UniformGrid>
    </Grid>
</Window>
